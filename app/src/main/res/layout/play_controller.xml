<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:id="@+id/rl_play_controller"

    android:layout_height="60dp">
    <LinearLayout
        android:id="@+id/ll_back_up"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_player_top_control"
        android:gravity="center"
       android:layout_centerInParent="true"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/back_up_icon"/>
        <TextView
            android:id="@+id/tv_back_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:21"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fast_forward"
        android:layout_width="wrap_content"
        android:background="@drawable/bg_player_top_control"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/fast_forword_icon"/>
        <TextView
            android:id="@+id/tv_fast_forward_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:21"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            />
    </LinearLayout>
</RelativeLayout>